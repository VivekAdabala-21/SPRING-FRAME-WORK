package com.example.demo;

import java.util.Arrays;

import org.springframework.context.annotation.AnnotationConfigApplicationContext;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.ComponentScan;
import org.springframework.context.annotation.Configuration;
import org.springframework.context.annotation.Lazy;
import org.springframework.stereotype.Component;

import com.example.demo.game.GameRunner;
import com.example.demo.game.Gaming_Console;
import com.example.demo.game.Pacman;

import jakarta.annotation.PostConstruct;
import jakarta.annotation.PreDestroy;


@Component
class someClass
{
	private SomeDependency someDependency;
	
	public someClass(SomeDependency someDependency)
	{
		this.someDependency = someDependency;
		System.out.println("some dependency ");
	}
	@PostConstruct
	public void initialize() {
		someDependency.getReady();
	}
	@PreDestroy
	public void cleanup()
	{
		System.out.println("space cleaned");
	}
}
@Component
@Lazy
class SomeDependency
{

	public void getReady() {
		// TODO Auto-generated method stub
		System.out.println(" some logic");
	}
	
}
@Configuration
@ComponentScan
public class PostConstructLauncher3 {

	
	public static void main(String[] args) {
		try( var context =
				new AnnotationConfigApplicationContext(PostConstructLauncher3.class))
		{
			Arrays.stream(context.getBeanDefinitionNames()).forEach(System.out::println);
		}
	   
	   

	}

}
